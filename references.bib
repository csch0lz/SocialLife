@article{hingson_magnitude_2005,
	title = {{MAGNITUDE} {OF} {ALCOHOL}-{RELATED} {MORTALITY} {AND} {MORBIDITY} {AMONG} U.S. {COLLEGE} {STUDENTS} {AGES} 18–24: Changes from 1998 to 2001},
