	author = {Kable, Joseph W. and Caulfield, M. Kathleen and Falcone, Mary and {McConnell}, Mairead and Bernardo, Leah and Parthasarathi, Trishala and Cooper, Nicole and Ashare, Rebecca and Audrain-{McGovern}, Janet and Hornik, R. and Diefenbach, Paul and Lee, Frank J. and Lerman, Caryn},
