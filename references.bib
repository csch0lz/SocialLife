}

@article{yu_levels--analysis_2024,
	title = {A levels-of-analysis framework for studying social emotions},
	rights = {2024 Springer Nature America, Inc.},
	issn = {2731-0574},
	url = {https://www.nature.com/articles/s44159-024-00285-1},
	doi = {10.1038/s44159-024-00285-1},
	abstract = {Social emotions such as guilt and gratitude serve adaptive functions critical to social interactions and relationships. Therefore, an ecologically valid approach to studying the psychological and neural mechanisms of social emotions is to elicit and measure them in social interactive contexts, where relevant adaptive goals and functions are salient. However, multiple psychological and neurocognitive processes might be simultaneously activated during real-time social interactions: traditional observation-based tasks and self-report measures alone are not sufficient to capture and dissociate these processes. In this Perspective, we draw on Marr’s levels-of-analysis framework to argue that a holistic consideration of the goals and functions of a social emotion (computation level), formal modelling of its underlying cognitive operations (algorithm level), and neuroscientific measures of the biological bases of these cognitive operations (implementation level) will afford the theoretical frameworks and methodological tools necessary to advance understanding of social emotions. To support this argument, we describe research that showcases the utility of creative combinations of interactive tasks, neural and behavioural measures, and computational modelling for advancing understanding of how social emotions arise and achieve their adaptive goals and functions.},
	pages = {1--16},
	journaltitle = {Nature Reviews Psychology},
	shortjournal = {Nat Rev Psychol},
	author = {Yu, Hongbo and Gao, Xiaoxue and Shen, Bo and Hu, Yang and Zhou, Xiaolin},
	urldate = {2024-03-05},
	date = {2024-02-21},
	langid = {english},
	note = {Publisher: Nature Publishing Group},
	keywords = {Emotion, Psychology, Social behaviour, Social neuroscience},
}

