	journaltitle = {Cognitive, Affective, \& Behavioral Neuroscience},
	shortjournal = {Cogn Affect Behav Neurosci},
	author = {Andrejević, Milan and Meshi, Dar and Bos, Wouter van den and Heekeren, Hauke R.},
