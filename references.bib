	number = {9},
	journaltitle = {Alcohol: Clinical and Experimental Research},
	author = {Morgenstern, Matthis and Schoeppe, Franziska and Campbell, Julie and Braam, Marloes W. G. and Stoolmiller, Michael and Sargent, James D.},
