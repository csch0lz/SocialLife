	journaltitle = {Journal of Studies on Alcohol and Drugs},
	shortjournal = {J. Stud. Alcohol Drugs},
	author = {Cavazos-Rehg, Patricia A. and Krauss, Melissa J. and Sowles, Shaina J. and Bierut, Laura J.},
