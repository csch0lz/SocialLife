	number = {2},
	journaltitle = {Alcoholism: Clinical and Experimental Research},
	author = {Kypri, Kypros and Paschall, Mallie J. and Langley, John and Baxter, Joanne and Cashell-Smith, Martine and Bourdeau, Beth},
	date = {2009-02-01},
	langid = {english},
